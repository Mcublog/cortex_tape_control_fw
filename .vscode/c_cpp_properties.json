{
    "version": 4,
    "configurations": [
        {
            "name": "ctc_v1_fw",
            "includePath": [
                "${workspaceFolder}/app/**",
                "${workspaceFolder}/targets/ctc_v1/**",
                "${workspaceFolder}/libs/**"
                // "${workspaceFolder}/arch/stm32f0/**"
            ],
            "defines": [
                "ARM_MATH_CM0",
                "STM32F072xB",
                "USE_HAL_DRIVER"
            ],
            "cStandard": "c11",
            "cppStandard": "c++20",
            "intelliSenseMode": "gcc-arm",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "configurationProvider": "go2sh.cmake-integration"
        }
    ]
}